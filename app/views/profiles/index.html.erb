
<%- model_class = Profile -%>
<div class="page-header">
  <div id="">
    <img src="http://cs-production.s3.amazonaws.com/challenges/1368/rtaImage.jpeg" alt="Smiley face" height="150" width="150">
  </div>
<h1>Dominic Nunes</h1>


  <div id="worked">

    <%= gmaps4rails(@json) %>
    <h1><%= current_user.name %></h1>
  </div>
  <div class="contain">
  <h5>My Offers - <%= @offers.count %></h5>

  <!--<h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>-->

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
  </tr>
  </thead>
  <tbody>
  <% @offers.each do |post| %>
      <tr>


        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.user.first_name %></td>
        <td><%= post.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'button' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'button' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_post_path,
                :class => 'button' %>

  </div>


  <div class="contain">
    <h5>My Requests - <%= @requests.count %></h5>
    <!--<h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>-->

    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
      </tr>
      </thead>
      <tbody>
      <% @requests.each do |post| %>
          <tr>

            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.user.first_name %></td>
            <td><%= post.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_post_path(post), :class => 'button' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          post_path(post),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'button' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_post_path,
                :class => 'button' %>

  </div>

</div>
